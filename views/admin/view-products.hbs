<section>
    <div class='container'>
        <div class="float-end mt-5 mb-3">
            <div>
            <a href="/admin/add-products" class="btn btn-success ml-auto">Add Products</a>
            </div>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.productName}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td><img src="/images/product-images/{{this._id}}.jpg" alt="prd-img" style="width: 50px;height: 50px;"></td>
                    <td>
                        <a href="/admin/edit-product" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you sure to delete {{this.productName}}?')" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>