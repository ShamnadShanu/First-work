<div class="row container-fluid">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 ps-5">
            <h2 class="text-center">Admin Log in</h2>
            <form action="/admin/login" method="POST">
                <div class="form-group mb-3">
                    <label for="email">Email address</label>
                    <input class="form-control" name="email" placeholder="Enter email" required type="email">
                </div>
                <div class="form-group mb-2">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Enter password" required minlength="4">
                    <p class="admin" style="color: red;">{{#if adminLoginError}}
                        {{adminLoginError}}
                        {{/if}}
                    </p>
                </div>
                 <button type="submit" class="btn btn-danger float-right">Log in</button>
            </form>
        </div>
    </div>
</div>